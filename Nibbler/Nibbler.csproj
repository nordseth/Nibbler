<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.1;netcoreapp2.2;netcoreapp3.0</TargetFrameworks>
    <version>1.0.0</version>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>nibbler</ToolCommandName>
    <RepositoryUrl>https://github.com/nordseth/Nibbler</RepositoryUrl>
    <PackageProjectUrl>https://github.com/nordseth/Nibbler</PackageProjectUrl>
    <Authors>Nordseth</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.26.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.4.3" />
    <PackageReference Include="SharpZipLib" Version="1.2.0" />
    <PackageReference Include="Mono.Posix.NETStandard" Version="1.0.0" />
  </ItemGroup>

</Project>
